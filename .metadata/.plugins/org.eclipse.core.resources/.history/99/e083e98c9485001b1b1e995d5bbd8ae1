package com.miu;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.ArrayList;
import java.util.List;

public class DbConnection {
	
	String url="jdbc:mysql://localhost:3306/entries";
	String uname="root";
	String pass="T0kh@66053";
	
	Connection con=null;
	
	public DbConnection() {
		try {
			System.out.println("Connecting to database..............."+url);
			/*The Connector/J version 8.0 library comes with a JDBC driver class: com.mysql.cj.jdbc.Driver.
			Before Java 6, we have to load the driver explicitly by this statement:
			Class.forName("com.mysql.jdbc.Driver");*/
			con=DriverManager.getConnection(url,uname,pass);
			System.out.println("Connection is successful!!!!!!");
						
		}catch(Exception ex) {
			ex.printStackTrace();
		}
	}
	
	public Entry getDefinition(String word){
			
		try {
			String query="Select * from entries where word =?";				
			PreparedStatement pst=con.prepareStatement(query);
			pst.setString(1, word);			

			System.out.println(pst);
			
			ResultSet rs=pst.executeQuery();
			
			Entry entry=new Entry();
			
			entry.setWord(word);
			
			List<String> list= new ArrayList<String>();
			
			while(rs.next()) {
				String definition=rs.getString("definition");
				System.out.println("definition "+definition);				
				list.add(definition);
			}

			entry.setDefinition(list);
			
			pst.close();
			con.close();

			return entry;
		} catch(Exception ex) {
			ex.printStackTrace();
			
		}
		return null;
		
	}

}
